@import "reticula.styl"


ul
	list-style none
	padding 0

h1, h2, h3, h4
	margin 0

.menu
	height 130px

.menu-nav
	background-color #34495E
	color white
	width 100%
	h1, h2, h3
		margin	0


.flex
	display flex

.content-view
	display flex
	height calc(100% - 130px)

.form-admon-title
	margin-bottom 15px

.navbar-left
	.menu-item
		float left

.actividades
	height 600px
	width 700px

.actividad-content
	background #defbea
	height 250px
	width 230px
	position absolute
	&-rd
		left 200px
	&-sc
		left 600px
	&-tp
		left 200px
		bottom 30px
	&-ba
		left 600px
		bottom 30px

.actividad-image
	display block
	margin auto

.actividades-button
	width 150px
	height 25px
	margin-top 10px
	&-rd
		background #75A9F9
	&-sc
		background #66FF99
	&-tp
		background #FFFF99
	&-ba
		background #FF6666

.indicadorprogreso-content
	height 100px
	width 200px
	position relative

.indicadorbotones-content
	height 250px
	width 200px
	position relative
	top 10px
	border #e74c3c
	border-style solid

.indicadorbotones-button
	width 150px
	height 40px
	position relative
	&-rd
		background #75A9F9
		top 20px
	&-sc
		background #66FF99
		top 40px
	&-tp
		background #FFFF99
		top 60px
	&-ba
		background #FF6666
		top 80px